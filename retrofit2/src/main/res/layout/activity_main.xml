<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="reoger.hut.com.retrofit2.MainActivity">
	
    <ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="100dp">
	    <TextView
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Hello World!"
		    android:padding="10dp"
		    android:gravity="center"
		    android:id="@+id/show_res" />
    </ScrollView>
	
	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Get"
		android:onClick="onTestGet"/>
	
	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Post"
		android:onClick="onTestPost"/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="PostString"
		android:onClick="onTestPostString"/>
	
	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="PostJSon"
		android:onClick="onTestPostJson"/>
	
	<Button
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:text="PostSingerFile"
	android:onClick="onTestPostSingerFile"/>
	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="PostMultiFile"
		android:onClick="onTestPostMultiFile"/>
	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="download"
		android:onClick="onTestdownLoad"/>
</LinearLayout>
